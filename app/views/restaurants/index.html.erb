<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= form_tag restaurants_path, :method => 'get', :id => "restaurants_search" do %>
  <p>
    <%= text_field_tag :search, params[:search], :style=>"height: 30px; width: 700px;", :placeholder=>"Search by Restaurant Name..." %>
    <%= submit_tag "Search", :name => nil, :class => 'btn btn-primary' %>
  </p>
  <div id="restaurants">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:open_time) %></th>
      <th><%= model_class.human_attribute_name(:close_time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><%= restaurant.status %></td>
        <td><%= (restaurant.open_time).to_s + ":00 hrs" %></td>
        <td><%= (restaurant.close_time).to_s + ":00 hrs" %></td>
        <td>
          <% if !(current_user.nil?) %>
            <% if can? :edit, restaurant %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, restaurant %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          restaurant_path(restaurant),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
<%= will_paginate @restaurants %>
</center>
<% if current_user %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>
<% end %>

</div>
<% end %>
