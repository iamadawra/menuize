<%- model_class = OwnerRequest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:restaurant_id) %></th>
      <th><%= model_class.human_attribute_name(:restaurant_name) %></th>
      <th><%= model_class.human_attribute_name(:granted) %></th>
      <th><%= model_class.human_attribute_name(:granted_by) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @owner_requests.each do |owner_request| %>
      <tr>
        <td><%= link_to owner_request.id, owner_request_path(owner_request) %></td>
        <td><%= owner_request.user_id %></td>
        <td><%= owner_request.restaurant_id %></td>
        <td><%= owner_request.restaurant_name %></td>
        <td><%= owner_request.granted %></td>
        <td><%= owner_request.granted_by %></td>
        <td><%=l owner_request.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_owner_request_path(owner_request), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      owner_request_path(owner_request),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_owner_request_path,
            :class => 'btn btn-primary' %>
