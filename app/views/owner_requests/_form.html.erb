<%= form_for @owner_request, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :restaurant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :restaurant_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :restaurant_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :restaurant_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :granted, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :granted, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :granted_by, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :granted_by, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                owner_requests_path, :class => 'btn' %>
  </div>
<% end %>
